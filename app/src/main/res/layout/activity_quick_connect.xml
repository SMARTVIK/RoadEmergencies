<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA"
    android:orientation="vertical"
    tools:context="com.roadsideemergencies.vik.roademergencies.activities.QuickConnectActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">


        <ImageView
            android:id="@+id/mechanic"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/mechanic" />


        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="#B2B2B2" />

        <ImageView
            android:id="@+id/service_station"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/sevice_station" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#B2B2B2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">


        <ImageView
            android:id="@+id/medicare"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/medicare" />


        <View
            android:layout_width="3dp"
            android:layout_height="match_parent"
            android:background="#B2B2B2" />

        <ImageView
            android:id="@+id/chillout"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:src="@drawable/chilout" />


    </LinearLayout>

    <ImageView
        android:layout_marginTop="20dp"
        android:id="@+id/quick_connect"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/quick_connect" />

</LinearLayout>
